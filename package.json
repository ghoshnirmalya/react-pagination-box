{
  "name": "react-pagination-box",
  "version": "0.0.0",
  "description": "A pagination component built using React.js",
  "license": "MIT",
  "author": "ghoshnirmalya",
  "main": "./dist/react-pagination-box.umd.js",
  "module": "./dist/react-pagination-box.es.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "precommit": "lint-staged",
    "dev": "vite",
    "prepare": "husky install",
    "prepublishOnly": "vite build",
    "release": "release-it",
    "serve": "vite preview"
  },
  "dependencies": {
    "@emotion/react": "^11.4.0"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@release-it/conventional-changelog": "^3.0.0",
    "@types/node": "^16.3.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "release-it": "^14.2.2",
    "typescript": "^4.3.2",
    "vite": "^2.4.2"
  },
  "exports": {
    ".": {
      "import": "./dist/react-pagination-box.es.js",
      "require": "./dist/react-pagination-box.umd.js"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,tsx,ts}": [
      "prettier --write"
    ]
  }
}
